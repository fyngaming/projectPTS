<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background putih dengan opacity sangat rendah -->
    <solid android:color="#4DFFFFFF" /> <!-- Putih dengan 30% opacity -->

    <!-- Garis tipis di atas -->
    <stroke
        android:width="1dp"
        android:color="#26FFFFFF" /> <!-- Garis sangat transparan -->

    <!-- Radius sedikit di atas saja -->
    <corners
        android:topLeftRadius="16dp"
        android:topRightRadius="16dp"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp"/>

</shape>