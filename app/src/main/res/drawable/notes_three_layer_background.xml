<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- LAPISAN PERTAMA: Biru 4CA1AF opacity 100% -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF4CA1AF" />
        </shape>
    </item>

    <!-- LAPISAN KEDUA: Gradient 2C3E50 0% -> 648DB6 100% -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF2C3E50"
                android:endColor="#FF648DB6"
                android:angle="135" />
        </shape>
    </item>

</layer-list>