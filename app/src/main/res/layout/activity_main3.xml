<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page2_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <!-- Header Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="@string/to_do_list"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <!-- Container untuk 3 Button dengan Background Gradient Gelap -->
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp"

        android:baselineAligned="true">

        <!-- ADD TASK Button -->
        <LinearLayout
            android:id="@+id/btnAddTask"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/dark_gradient_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:minWidth="48dp"
            tools:ignore="DuplicateClickableBounds">

            <!-- Logo Plus -->
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/circle_blue_bg"
                android:gravity="center"
                android:contentDescription="@string/add_task_icon_desc">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/add_task_icon"
                    android:importantForAccessibility="yes"
                    android:scaleType="centerInside"
                    android:src="@drawable/plus" />

            </LinearLayout>

            <!-- Text ADD TASK -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_task"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- VIEW TASK Button -->
        <LinearLayout
            android:id="@+id/btnViewTask"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/dark_gradient_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:minWidth="48dp"
            tools:ignore="DuplicateClickableBounds">

            <!-- Logo View -->
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/circle_green_bg"
                android:gravity="center"
                android:contentDescription="@string/view_task_icon_desc">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/view_task_icon"
                    android:importantForAccessibility="yes"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon" />

            </LinearLayout>

            <!-- Text VIEW TASK -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/view_task"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- NOTES Button -->
        <LinearLayout
            android:id="@+id/btnNotes"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@drawable/dark_gradient_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:minWidth="48dp"
            tools:ignore="DuplicateClickableBounds">

            <!-- Logo Notes -->
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/circle_orange_bg"
                android:gravity="center"
                android:contentDescription="@string/notes_icon_desc">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/notes_icon"
                    android:importantForAccessibility="yes"
                    android:scaleType="centerInside"
                    android:src="@drawable/book" />

            </LinearLayout>

            <!-- Text NOTES -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/notes"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- SPACER UNTUK MENDORONG FOOTER KE BAWAH -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- FOOTER DENGAN BACKGROUND ABU-ABU -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gray_footer_background"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="40dp">

        <!-- Logo 1 - Home dengan Background Oval Putih yang DICENTER -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <!-- Background Oval Putih yang Ditempatkan Tepat di Tengah Belakang Logo -->
            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="@drawable/white_oval_background" />

            <!-- Container untuk Logo Home -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/home_button_desc">

                <ImageView
                    android:id="@+id/footer_home"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/home"
                    android:contentDescription="@string/home_icon"
                    android:importantForAccessibility="yes" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Logo 2 - Add -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/add_button_desc">

            <ImageView
                android:id="@+id/footer_add"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/plus_vektor"
                android:contentDescription="@string/add_icon"
                android:importantForAccessibility="yes" />

        </LinearLayout>

        <!-- Logo 3 - Notes -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/notes_button_desc">

            <ImageView
                android:id="@+id/footer_notes"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/book"
                android:contentDescription="@string/notes_icon_footer"
                android:importantForAccessibility="yes" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>