<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notes_three_layer_background"
    android:padding="16dp">

    <!-- Tombol Back di Pojok Kiri Atas -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/notes_button_background"
        android:src="@drawable/panah"
        android:contentDescription="Kembali"
        android:elevation="8dp" />

    <!-- Background Putih -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9D9D9"
        android:orientation="vertical"
        android:padding="20dp"
        android:radius="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Your Task"
            android:textColor="#2C3E50"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Calendar Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:background="@drawable/notes_edittext_background"
            android:padding="16dp">

            <!-- Month Year -->
            <TextView
                android:id="@+id/tvMonthYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEPTEMBER 2025"
                android:textColor="#2C3E50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Days Header -->
            <TableLayout
                android:id="@+id/daysHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_marginBottom="8dp">

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SUN"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="MON"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="TUE"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="WED"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="THU"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="FRI"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SAT"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp" />
                </TableRow>
            </TableLayout>

            <!-- Dates Row -->
            <TableLayout
                android:id="@+id/datesGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:id="@+id/date13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="13"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:padding="8dp" />
                    <TextView
                        android:id="@+id/date14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="14"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:padding="8dp" />
                    <TextView
                        android:id="@+id/date15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="15"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:padding="8dp" />
                    <TextView
                        android:id="@+id/date16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="16"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:padding="8dp" />
                    <TextView
                        android:id="@+id/date17"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="17"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:padding="8dp" />
                    <TextView
                        android:id="@+id/date18"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="18"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:padding="8dp" />
                    <TextView
                        android:id="@+id/date19"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="19"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:padding="8dp" />
                </TableRow>
            </TableLayout>

        </LinearLayout>

        <!-- Today's Tasks Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Today's Tasks"
            android:textColor="#2C3E50"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- List of Tasks/Catatan -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/tasksContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Catatan akan ditambahkan secara dinamis di sini -->

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>