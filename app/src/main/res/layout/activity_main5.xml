<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notes_three_layer_background"
    android:padding="16dp">

    <!-- Tombol Back di Pojok Kiri Atas -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/notes_button_background"
        android:src="@drawable/ic_arrow_back_white"
        android:contentDescription="Kembali"
        android:elevation="8dp" />

    <!-- Background Putih Utama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9D9D9"
        android:orientation="vertical"
        android:padding="20dp"
        android:radius="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Your Task"
            android:textColor="#2C3E50"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Calendar Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:background="@drawable/notes_edittext_background"
            android:padding="16dp">

            <!-- Month Navigation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btnPrevMonth"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_forward_black"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Previous month" />

                <TextView
                    android:id="@+id/tvMonthYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:text="SEPTEMBER 2025"
                    android:textColor="#2C3E50"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="12dp" />

                <ImageButton
                    android:id="@+id/btnNextMonth"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_forward_black"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Next month" />

            </LinearLayout>

            <!-- Days Header -->
            <TableLayout
                android:id="@+id/daysHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_marginBottom="8dp">

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SUN"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="MON"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="TUE"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="WED"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="THU"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="FRI"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SAT"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp" />
                </TableRow>
            </TableLayout>

            <!-- Calendar Grid -->
            <LinearLayout
                android:id="@+id/calendarGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Calendar akan di-generate secara dinamis di sini -->
            </LinearLayout>

        </LinearLayout>

        <!-- Selected Date & Tasks Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvSelectedDateHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tasks for: "
                android:textColor="#2C3E50"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSelectedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="#2C3E50"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- List of Tasks/Catatan -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/tasksContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Catatan akan ditambahkan secara dinamis di sini -->

            </LinearLayout>

        </ScrollView>

        <!-- FOOTER DENGAN BACKGROUND PUTIH -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_footer_background"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="40dp">

            <!-- Logo 1 - Home -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <!-- Background Oval Putih yang Ditempatkan Tepat di Tengah Belakang Logo -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/white_oval_background" />

                <!-- Container untuk Logo Home -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:id="@+id/footer_home"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/home"
                        android:contentDescription="Home"
                        android:importantForAccessibility="yes" />

                </LinearLayout>

            </RelativeLayout>

            <!-- Logo 2 - Add dengan Background Oval Putih -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <!-- Background Oval Putih yang Ditempatkan Tepat di Tengah Belakang Logo Plus -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/white_oval_background" />

                <!-- Container untuk Logo Add -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:id="@+id/footer_add"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/plus_vektor"
                        android:contentDescription="Add"
                        android:importantForAccessibility="yes" />

                </LinearLayout>

            </RelativeLayout>

            <!-- Logo 3 - Notes -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <!-- Background Oval Putih yang Ditempatkan Tepat di Tengah Belakang Logo -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/white_oval_background" />

                <!-- Container untuk Logo Notes -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:id="@+id/footer_notes"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/book"
                        android:contentDescription="Notes"
                        android:importantForAccessibility="yes" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>